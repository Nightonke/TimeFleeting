<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:orientation="vertical" >
    
    <LinearLayout
        android:id="@+id/layout_1_title_ly"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#1E90FF"
        android:orientation="horizontal"
        >
        
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textColor="#FFFFFF"
            android:text="Time Fleeting"
            android:textSize="20sp"
            android:layout_marginLeft="10dp"
            android:layout_gravity="center_vertical"
            android:gravity="center_vertical"
            />
        
        <ImageView
            android:id="@+id/layout_1_sort"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:src="@drawable/sort"
            />
        
    </LinearLayout>
    
   <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        
        <TextView
            android:id="@+id/layout_1_tips"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:textColor="#1E90FF"
            android:paddingTop="20dp"
            android:paddingLeft="30dp"
            android:paddingRight="30dp"
            android:text="Such a blank here...\nClick the button below to create our future!"
            />
       
        <ListView
	        android:id="@+id/listview"
	        android:layout_width="match_parent"
	        android:layout_height="match_parent"
	        android:divider="@drawable/divider"
	        android:dividerHeight="5dp"
	        />

        <com.capricorn.RayMenu
	        android:id="@+id/past_layout_ray_menu"
	        android:layout_width="400dp"
	        android:layout_height="80dp"
	        android:paddingLeft="5dp"
	        android:paddingRight="150dp"
	        android:layout_gravity="bottom"
	        />
        
    </FrameLayout>
   
</LinearLayout>
