<?xml version="1.0" encoding="utf-8"?>
<LinearLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:toggle="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    android:background="@color/menu_layout_background">
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/layout_title"
        android:orientation="horizontal"
        >

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal"
            >
        
	        <ImageView
	            android:id="@+id/menu_layout_logo"
	            android:layout_width="40dp"
	            android:layout_height="40dp"
	            android:layout_marginTop="5dp"
	            android:layout_marginLeft="5dp"
	            android:layout_marginBottom="5dp"
	            android:paddingLeft="5dp"
	            android:layout_gravity="center"
	            android:src="@drawable/timefleeting_logo_2"
	            />
	        
	        <TextView
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:textColor="#FFFFFF"
	            android:text="Time Fleeting"
	            android:textSize="15sp"
	            android:paddingLeft="5dp"
	            android:layout_gravity="center_vertical"
	            android:gravity="center_vertical"
	            />
	        
	    </LinearLayout>
        
        <ImageView
            android:id="@+id/menu_layout_back"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:src="@drawable/back"
            />
        
    </LinearLayout>
    
    <TextView
        android:layout_width="match_parent"
        android:layout_height="10dp"
        />
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp"
        >
    
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Notification"
            android:textColor="@color/future_listview_title"
            android:gravity="center_vertical|left"
            />
        
	    <com.zcw.togglebutton.ToggleButton
	        android:id="@+id/menu_layout_remind_enable"
	        android:layout_width="36dp"
	        android:layout_height="20dp"
	        android:layout_gravity="center_vertical"
	        toggle:offColor="@color/layout_title"
	        toggle:offBorderColor="@color/layout_title"
	        toggle:onColor="#FFFFFF"
	        toggle:spotColor="#080"
	        toggle:borderWidth="0.5dp"
	        android:rotation="180"
	        />
	    
	</LinearLayout>
	
    <TextView
        android:layout_width="match_parent"
        android:layout_height="10dp"
        />
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp"
        >
    
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Vebrate"
            android:textColor="@color/future_listview_title"
            android:gravity="center_vertical|left"
            />
        
        <com.zcw.togglebutton.ToggleButton
            android:id="@+id/menu_layout_vibrate_enable"
            android:layout_width="36dp"
            android:layout_height="20dp"
            android:layout_gravity="center_vertical"
            toggle:offColor="@color/layout_title"
            toggle:offBorderColor="@color/layout_title"
            toggle:onColor="#FFFFFF"
            toggle:spotColor="#080"
            toggle:borderWidth="0.5dp"
            android:rotation="180"
            />
        
    </LinearLayout>
    
    <TextView
        android:layout_width="match_parent"
        android:layout_height="10dp"
        />
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp"
        >
    
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Sound"
            android:textColor="@color/future_listview_title"
            android:gravity="center_vertical|left"
            />
        
        <com.zcw.togglebutton.ToggleButton
            android:id="@+id/menu_layout_sound_enable"
            android:layout_width="36dp"
            android:layout_height="20dp"
            android:layout_gravity="center_vertical"
            toggle:offColor="@color/layout_title"
            toggle:offBorderColor="@color/layout_title"
            toggle:onColor="#FFFFFF"
            toggle:spotColor="#080"
            toggle:borderWidth="0.5dp"
            android:rotation="180"
            />
        
    </LinearLayout>

</LinearLayout>
