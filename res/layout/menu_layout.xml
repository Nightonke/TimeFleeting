<?xml version="1.0" encoding="utf-8"?>
<LinearLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:toggle="http://schemas.android.com/apk/res-auto"
    xmlns:wave="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    android:background="@color/menu_layout_background">
    
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
    
        <com.timefleeting.app.WaveView
            android:id="@+id/menu_wave_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/viewpager_background"
            wave:above_wave_color="@color/viewpager_above_wave"
            wave:blow_wave_color="@color/viewpager_below_wave"
            wave:progress="30"
            wave:wave_height="little"
            wave:wave_hz="normal"
            wave:wave_length="middle" />
        
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >
        
		    <LinearLayout
		        android:id="@+id/menu_title_layout"
		        android:layout_width="match_parent"
		        android:layout_height="50dp"
		        android:background="@color/layout_title"
		        android:orientation="horizontal"
		        >
		
		        <LinearLayout
		            android:layout_width="0dp"
		            android:layout_height="wrap_content"
		            android:layout_weight="1"
		            android:orientation="horizontal"
		            >
		        
			        <ImageView
			            android:id="@+id/menu_layout_logo"
			            android:layout_width="40dp"
			            android:layout_height="40dp"
			            android:layout_marginTop="5dp"
			            android:layout_marginLeft="5dp"
			            android:layout_marginBottom="5dp"
			            android:paddingLeft="5dp"
			            android:layout_gravity="center"
			            android:src="@drawable/timefleeting_logo_2"
			            />
			        
			        <TextView
			            android:layout_width="wrap_content"
			            android:layout_height="wrap_content"
			            android:textColor="#FFFFFF"
			            android:text="Time Fleeting"
			            android:textSize="15sp"
			            android:paddingLeft="5dp"
			            android:layout_gravity="center_vertical"
			            android:gravity="center_vertical"
			            />
			        
			    </LinearLayout>
		        
		        <ImageView
		            android:id="@+id/menu_layout_back"
		            android:layout_width="wrap_content"
		            android:layout_height="match_parent"
		            android:layout_marginTop="5dp"
		            android:layout_marginBottom="5dp"
		            android:src="@drawable/back"
		            />
		        
		    </LinearLayout>
		    
		    <TextView
		        android:layout_width="match_parent"
		        android:layout_height="10dp"
		        />
		    
		    <LinearLayout
		        android:id="@+id/menu_layout_remind_ly"
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content"
		        android:orientation="horizontal"
		        android:padding="10dp"
		        >
		    
		        <TextView
		            android:id="@+id/menu_text_view_0"
		            android:layout_width="0dp"
		            android:layout_height="wrap_content"
		            android:layout_weight="1"
		            android:text="Todo Notification"
		            android:textColor="@color/future_listview_title"
		            android:gravity="center_vertical|left"
		            />
		        
			    <com.zcw.togglebutton.ToggleButton
			        android:id="@+id/menu_layout_remind_enable"
			        android:layout_width="36dp"
			        android:layout_height="20dp"
			        android:layout_gravity="center_vertical"
			        android:rotation="180"
			        />
			    
			</LinearLayout>
			
		    <TextView
		        android:layout_width="match_parent"
		        android:layout_height="10dp"
		        />
		    
		    <LinearLayout
		        android:id="@+id/menu_layout_remind_past_ly"
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content"
		        android:orientation="horizontal"
		        android:padding="10dp"
		        >
		    
		        <TextView
		            android:id="@+id/menu_text_view_1"
		            android:layout_width="0dp"
		            android:layout_height="wrap_content"
		            android:layout_weight="1"
		            android:text="Memory Notification"
		            android:textColor="@color/future_listview_title"
		            android:gravity="center_vertical|left"
		            />
		        
		        <com.zcw.togglebutton.ToggleButton
		            android:id="@+id/menu_layout_remind_past_enable"
		            android:layout_width="36dp"
		            android:layout_height="20dp"
		            android:layout_gravity="center_vertical"
		            android:rotation="180"
		            />
		        
		    </LinearLayout>
			
		    <TextView
		        android:layout_width="match_parent"
		        android:layout_height="10dp"
		        />
		    
		    <LinearLayout
		        android:id="@+id/menu_layout_vibrate_ly"
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content"
		        android:orientation="horizontal"
		        android:padding="10dp"
		        >
		    
		        <TextView
		            android:id="@+id/menu_text_view_2"
		            android:layout_width="0dp"
		            android:layout_height="wrap_content"
		            android:layout_weight="1"
		            android:text="Vibrate"
		            android:textColor="@color/future_listview_title"
		            android:gravity="center_vertical|left"
		            />
		        
		        <com.zcw.togglebutton.ToggleButton
		            android:id="@+id/menu_layout_vibrate_enable"
		            android:layout_width="36dp"
		            android:layout_height="20dp"
		            android:layout_gravity="center_vertical"
		            android:rotation="180"
		            />
		        
		    </LinearLayout>
		    
		    <TextView
		        android:layout_width="match_parent"
		        android:layout_height="10dp"
		        />
		    
		    <LinearLayout
		        android:id="@+id/menu_layout_sound_ly"
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content"
		        android:orientation="horizontal"
		        android:padding="10dp"
		        >
		    
		        <TextView
		            android:id="@+id/menu_text_view_3"
		            android:layout_width="0dp"
		            android:layout_height="wrap_content"
		            android:layout_weight="1"
		            android:text="Sound"
		            android:textColor="@color/future_listview_title"
		            android:gravity="center_vertical|left"
		            />
		        
		        <com.zcw.togglebutton.ToggleButton
		            android:id="@+id/menu_layout_sound_enable"
		            android:layout_width="36dp"
		            android:layout_height="20dp"
		            android:layout_gravity="center_vertical"
		            android:rotation="180"
		            />
		        
		    </LinearLayout>
		    
		    <TextView
		        android:layout_width="match_parent"
		        android:layout_height="10dp"
		        />
		    
		    <LinearLayout
		        android:id="@+id/menu_layout_remind_time_ly"
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content"
		        android:orientation="horizontal"
		        android:padding="10dp"
		        >
		    
		        <TextView
		            android:id="@+id/menu_text_view_4"
		            android:layout_width="0dp"
		            android:layout_height="wrap_content"
		            android:layout_weight="1"
		            android:text="Memory remind time"
		            android:textColor="@color/future_listview_title"
		            android:gravity="center_vertical|left"
		            />
		        
		        <TextView
		            android:id="@+id/menu_layout_remind_time_text"
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:textColor="@color/future_listview_title"
		            android:gravity="center_vertical|right"
		            android:paddingRight="5dp"
		            />
		        
		    </LinearLayout>
		    
		    <TextView
		        android:layout_width="match_parent"
		        android:layout_height="10dp"
		        />
		    
		    <LinearLayout
		        android:id="@+id/menu_layout_advanced_time_ly"
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content"
		        android:orientation="horizontal"
		        android:padding="10dp"
		        >
		    
		        <TextView
		            android:id="@+id/menu_text_view_5"
		            android:layout_width="0dp"
		            android:layout_height="wrap_content"
		            android:layout_weight="1"
		            android:text="Advanced time"
		            android:textColor="@color/future_listview_title"
		            android:gravity="center_vertical|left"
		            android:layout_gravity="right|center_vertical"
		            />
		        
		        <Spinner
		            android:layout_height="wrap_content"
		            android:layout_width="wrap_content"
		            android:id="@+id/past_advanced_spinner"
		            android:textSize="10sp"
		            android:layout_gravity="right|center_vertical"
		            android:gravity="right|center_vertical"
		            android:paddingRight="20dp"
		            android:spinnerMode="dropdown"
		            android:textColor="@color/future_listview_title"
		            />
		        
		    </LinearLayout>
		    
		    <TextView
		        android:layout_width="match_parent"
		        android:layout_height="10dp"
		        />
		    
		    <LinearLayout
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content"
		        android:orientation="horizontal"
		        android:padding="10dp"
		        >
		    
		        <Button
		            android:id="@+id/set_color_button"
		            android:layout_width="match_parent"
		            android:layout_height="30dp"
		            android:text="Draw me!"
		            android:textSize="14sp"
		            android:background="#dadbda"
		            android:paddingRight="10dp"
		            />
		        
		    </LinearLayout>
		    
		    <TextView
		        android:layout_width="match_parent"
		        android:layout_height="10dp"
		        />
		    
		    <LinearLayout
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content"
		        android:orientation="horizontal"
		        android:padding="10dp"
		        >
		    
		        <Button
		            android:id="@+id/default_color_button"
		            android:layout_width="match_parent"
		            android:layout_height="30dp"
		            android:text="Original me!"
		            android:textSize="14sp"
		            android:background="#dadbda"
		            android:paddingRight="10dp"
		            />
		        
		    </LinearLayout>
		    
		</LinearLayout>
		
    </FrameLayout>

</LinearLayout>
