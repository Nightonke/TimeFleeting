<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/set_star_lyy"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:orientation="horizontal"
        >
        
        <ImageView
	        android:id="@+id/star_1"
	        android:layout_width="0dp"
	        android:layout_height="wrap_content"
	        android:layout_weight="1"
	        android:layout_gravity="center_vertical"
	        android:src="@drawable/star_logo"
	        />
	    
	    <ImageView
	        android:id="@+id/star_2"
	        android:layout_width="0dp"
	        android:layout_height="wrap_content"
	        android:layout_weight="1"
	        android:layout_gravity="center_vertical"
	        android:src="@drawable/star_logo"
	        />
	    
	    <ImageView
	        android:id="@+id/star_3"
	        android:layout_width="0dp"
	        android:layout_height="wrap_content"
	        android:layout_weight="1"
	        android:layout_gravity="center_vertical"
	        android:src="@drawable/star_logo"
	        />
	    
	    <ImageView
	        android:id="@+id/star_4"
	        android:layout_width="0dp"
	        android:layout_height="wrap_content"
	        android:layout_weight="1"
	        android:layout_gravity="center_vertical"
	        android:src="@drawable/star_logo"
	        />
	    
	    <ImageView
	        android:id="@+id/star_5"
	        android:layout_width="0dp"
	        android:layout_height="wrap_content"
	        android:layout_weight="1"
	        android:layout_gravity="center_vertical"
	        android:src="@drawable/star_logo"
	        />
        
    </LinearLayout>
    
    <SeekBar
        android:id="@+id/star_seekbar"
        android:layout_width="match_parent"  
        android:layout_height="wrap_content"
        android:max="4"
        android:paddingLeft="30dp"
        android:paddingRight="30dp"
        android:progressDrawable="@drawable/myseekbar_scrubber_progress_horizontal_holo_light"
        android:thumb="@drawable/myseekbar_scrubber_control_selector_holo_light"
        />    
        
     <TextView
         android:layout_width="match_parent"  
         android:layout_height="20dp"
         />   
    
     <TextView
         android:layout_width="match_parent"  
         android:layout_height="1dp"
         android:background="#ffffff"
         />    
    
     <LinearLayout
         android:layout_width="match_parent"  
         android:layout_height="60dp"
         >
     
	     <TextView
	         android:id="@+id/set_star_ok"
	         android:layout_width="match_parent"  
	         android:layout_height="wrap_content"
	         android:text="OK"
	         android:textColor="#FFFFFF"
	         android:textSize="20sp"
	         android:gravity="center|center_vertical|center_horizontal"
	         android:layout_gravity="center|center_vertical|center_horizontal"
	         />
	     
	 </LinearLayout>

</LinearLayout>
